<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        style="@style/button_menu_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            style="@style/bottom_menu_buttons"
            android:layout_marginEnd="60dp"
            android:text="@string/insights_button_label"
            >
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            style="@style/bottom_menu_buttons"
            android:layout_marginEnd="60dp"
            android:text="@string/home_button_label"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            style="@style/bottom_menu_buttons"
            android:text="@string/history_button_label"
             />

        <ImageButton
            android:id="@+id/imageButton2"
            style="@style/bottom_menu_buttons"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/history_icon"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>